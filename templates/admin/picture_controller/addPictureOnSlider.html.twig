{% extends 'admin/admin_base.html.twig' %}
{% set selected = 'pictures' %}
{% block content %}
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
        </div>
    </nav>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-nav-tabs">
                        <h4 class="card-header card-header-success">Додати картину на слайдер</h4>
                        <div class="card-body">
                            <h4 class="card-title">Тут ви зможете додати картину на слайдер</h4>
                            <p class="card-text">Виберiть картину та натиснiть "Додати"</p>
                        </div>
                        <hr>
                        <div class="card-body">
                            <div class="row">
                                {% for picture in pictures %}
                                    <div class="col-sm-12 col-md-6 col-lg-4 col-4">
                                        <div class="card">
                                            <img class="card-img-top" style="width: 100%; height: 200px; object-fit: cover" src="/uploads/pictures/{{ picture.photo }}" alt="Card image cap">
                                            <div class="card-body text-center">
                                                <p class="card-text">{{ picture.getTranslation('UA') ? picture.getTranslation('UA').title : '' }}</p>
                                                <a href="{{ path('picturesAddOnSlider', { 'pos': app.request.query.get('pos'), 'picture': picture.id}) }}" class="btn btn-success">Додати</a>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}