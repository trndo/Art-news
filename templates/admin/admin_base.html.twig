{% extends 'base.html.twig' %}
{% block title %}ArtNews Admin{% endblock %}
{% block stylesheets %}
  <link rel="stylesheet"
        type="text/css"
        href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
  {{ encore_entry_link_tags('admin') }}
{% endblock %}
{% block body %}
  <div class="wrapper ">
    <div class="sidebar" data-color="green" data-background-color="white">
      <!--
      Tip 1: You can change the color of the sidebar using: data-color="purple | azure | green | orange | danger"
      Tip 2: you can also add an image using data-image tag-->
      <div class="logo">
        <a href="#" class="simple-text logo-mini">
          ArtNews
          <img id="logo" src="#" alt="ArtNews">
        </a>
      </div>
      <div class="sidebar-wrapper">
        <ul class="nav">
          <li class="nav-item {% if selected|default('articles') == 'articles' %}active{% endif %}">
            <a class="nav-link" href="{{ path('showAllArticles') }}">
              <i class="material-icons">dashboard</i>
              <p>Главная</p>
            </a>
          </li>
          <li class="nav-item {% if selected|default('slides') == 'slides' %}active{% endif %}">
            <a class="nav-link" href="{{ path('showAllSlides') }}">
              <i class="material-icons">supervisor_account</i>
              <p>Пользователи</p>
            </a>
          </li>
          <li class="nav-item {% if selected|default('pictures') == 'pictures' %}active{% endif %}">
            <a class="nav-link" href="#">
              <i class="material-icons">book</i>
              <p>Темы</p>
            </a>
          </li>
          <li class="nav-item {% if selected|default('settings') == 'settings' %}active{% endif %}">
            <a class="nav-link" href="{{ path('showSettings') }}">
              <i class="material-icons">work</i>
              <p>Специальности</p>
            </a>
          </li>
          <li class="nav-item {% if selected|default('clients') == 'clients' %}active{% endif %}">
            <a class="nav-link" href="#">
              <i class="material-icons">label</i>
              <p>Метки</p>
            </a>
          </li>
          <!-- your sidebar here -->
        </ul>
      </div>
    </div>
    <div class="main-panel">
      <!-- Navbar -->
      <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
          <div class="navbar-wrapper">
            <a class="navbar-brand" href="#pablo">Dashboard</a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
            <span class="sr-only">Toggle navigation</span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
            <span class="navbar-toggler-icon icon-bar"></span>
          </button>
          <div class="collapse navbar-collapse justify-content-end">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="#pablo">
                  <i class="material-icons">notifications</i> Notifications
                </a>
              </li>
              <!-- your navbar here -->
            </ul>
          </div>
        </div>
      </nav>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          {% block content %}
          {% endblock %}
        </div>
      </div>
      <footer class="footer">
        <div class="container-fluid">
          <nav class="float-left">
            <ul>
              <li>
                <a href="https://www.creative-tim.com">
                  Creative Tim
                </a>
              </li>
            </ul>
          </nav>
          <div class="copyright float-right">
            &copy;
            <script>
              document.write(new Date().getFullYear())
            </script>, made with <i class="material-icons">favorite</i> by
            <a href="#" target="_blank">Creative Tim</a> for a better web.
          </div>
          <!-- your footer here -->
        </div>
      </footer>
    </div>
  </div>
{% endblock %}
{% block javascripts %}
  {{ encore_entry_script_tags('admin') }}
{% endblock %}