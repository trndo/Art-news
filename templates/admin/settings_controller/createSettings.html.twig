{% extends 'admin/admin_base.html.twig' %}
{% set selected = 'settings' %}
{% block content %}
    <div class="card">
        <div class="card-header card-header-primary">
            <h2 class="card-title">Створення контакту</h2>
            <h4 class="category">Додайте ваші контакти для того щоб з вами можна було зв'язатися!</h4>
        </div>
        <br>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.name,{
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.translationName,{
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email,{
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.phone,{
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Номер телефону'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.save,{
                            'attr': {
                                'class': 'btn btn-primary'
                            }
                        }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}