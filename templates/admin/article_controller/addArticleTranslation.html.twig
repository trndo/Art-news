{% extends 'admin/admin_base.html.twig' %}
{% block content %}
    <div class="card">
        <div class="card-header card-header-primary">
            <h2 class="card-title">Створення перекладу</h2>
            <h4 class="category">Ви створюєте переклад вашої статті!</h4>
        </div>
        <br>
        <div class="container">
            {% if article.getTranslation("EN") %}
                {% set locale = "UA" %}
            {% elseif article.getTranslation("UA") %}
                {% set locale = "EN" %}
            {% endif %}
            {% dump(locale) %}
            <div class="row">
                <div class="col-12">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_row(form.locale,{
                            'attr': {
                                'class': 'form-control',
                                'value': locale
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.title,{
                            'attr': {
                                'class': 'textarea form-control'
                            }
                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.body,{
                            'attr': {
                                'class': 'form-control',
                                'placeholder':'Зміст статті',
                                'rows': 10
                            },

                        }) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.save,{
                            'attr': {
                                'class': 'btn btn-primary'
                            }
                        }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}